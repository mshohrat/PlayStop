<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.movie.MovieFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/movie_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:collapsedTitleGravity="end|center_vertical"
            app:collapsedTitleTextAppearance="?textAppearanceHeadline3"
            app:expandedTitleGravity="end|center_vertical"
            app:expandedTitleMargin="@dimen/margin_standard"
            app:contentScrim="@color/colorPrimaryDark"
            app:expandedTitleTextAppearance="?textAppearanceHeadline3"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:scrimAnimationDuration="200"
            android:fitsSystemWindows="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="?actionBarSize"
                android:background="@color/colorAccent"
                app:layout_collapseMode="parallax">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/movie_image_iv"
                    android:layout_width="@dimen/item_movie_width"
                    android:layout_height="@dimen/item_movie_image_height"
                    android:scaleType="fitXY"
                    tools:srcCompat="@drawable/ic_avatar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="@dimen/margin_standard"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/movie_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?textAppearanceHeadline1"
                    app:layout_constraintEnd_toStartOf="@id/movie_image_iv"
                    app:layout_constraintTop_toTopOf="@id/movie_image_iv"
                    app:layout_constraintBottom_toTopOf="@id/movie_genre_tv"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="دل"
                    android:layout_marginEnd="@dimen/margin_standard"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/movie_genre_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?textAppearanceCaption"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@id/movie_name_tv"
                    app:layout_constraintTop_toBottomOf="@id/movie_name_tv"
                    app:layout_constraintBottom_toTopOf="@id/movie_length_tv"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:textSize="12sp"
                    tools:text="ترسناک"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/movie_length_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?textAppearanceBody1"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@id/movie_name_tv"
                    app:layout_constraintTop_toBottomOf="@id/movie_genre_tv"
                    app:layout_constraintBottom_toTopOf="@id/movie_score_tv"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:textSize="12sp"
                    tools:text="1:22 دقیقه"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/movie_score_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?textAppearanceCaption"
                    app:layout_constraintEnd_toEndOf="@id/movie_name_tv"
                    app:layout_constraintTop_toBottomOf="@id/movie_length_tv"
                    app:layout_constraintBottom_toBottomOf="@id/movie_image_iv"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:background="@drawable/shape_rectangle_rounded_6dp_yellow"
                    android:paddingStart="@dimen/padding_medium"
                    android:paddingEnd="@dimen/padding_medium"
                    android:paddingTop="@dimen/padding_small"
                    android:paddingBottom="@dimen/padding_small"
                    android:textColor="@color/white"
                    tools:text="IMDB : 6.5"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/movie_score_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?textAppearanceCaption"
                    app:layout_constraintEnd_toStartOf="@id/movie_score_tv"
                    app:layout_constraintTop_toTopOf="@id/movie_score_tv"
                    app:layout_constraintBottom_toBottomOf="@id/movie_score_tv"
                    android:layout_marginEnd="@dimen/padding_standard"
                    android:textColor="@color/white"
                    tools:text="800 رای"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:contentInsetEnd="@dimen/margin_standard"
                app:contentInsetStart="@dimen/margin_standard"
                app:contentInsetStartWithNavigation="@dimen/margin_standard"
                app:contentInsetEndWithActions="@dimen/margin_standard"
                app:layout_collapseMode="pin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/movie_share_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_share"
                        android:background="?android:selectableItemBackground"/>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?textAppearanceBody1"
                        android:textColor="@color/white"
                        android:layout_marginEnd="@dimen/margin_standard"
                        tools:text="@string/app_name"/>

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/movie_back_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rotation="180"
                        app:srcCompat="@drawable/ic_back"
                        android:background="?android:selectableItemBackground"/>

                </LinearLayout>
            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:padding="@dimen/padding_standard"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?textAppearanceHeadline3"
                android:text="@string/description"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/movie_description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_medium"
                style="?textAppearanceCaption"
                tools:text=" یک متن طولانی برای توضیحات فیلم یک متن طولانی برای توضیحات فیلم یک متن طولانی برای توضیحات فیلم یک متن طولانی برای توضیحات فیلم یک متن طولانی برای توضیحات فیلم یک متن طولانی برای توضیحات فیلم"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?textAppearanceHeadline3"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/actors"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/movie_actors_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_medium"
                style="?textAppearanceCaption"
                tools:text="جانی دپ - برد پیت - آلپاچینو"/>


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?textAppearanceHeadline3"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/director"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/movie_director_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_medium"
                style="?textAppearanceCaption"
                tools:text="کریستوفر نولان"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?textAppearanceHeadline3"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/writer"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/movie_writer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_medium"
                style="?textAppearanceCaption"
                tools:text="کریستوفر نولان"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/movie_links_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?textAppearanceHeadline3"
                android:layout_marginTop="@dimen/margin_large"
                android:visibility="gone"
                tools:visibility="visible"
                android:text="@string/links"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/movie_links_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginTop="@dimen/margin_medium"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/movie_seasons_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?textAppearanceHeadline3"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/seasons"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/movie_seasons_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginTop="@dimen/margin_medium"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/movie_comments_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                style="?textAppearanceHeadline3"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/comments"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/movie_comments_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginTop="@dimen/margin_medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/movie_submit_comment_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="?textAppearanceBody1"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/colorAccent"
                    android:text="@string/submit"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/movie_submit_comment_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_marginStart="@dimen/margin_medium"
                    style="?textAppearanceBody1"
                    android:textColor="@color/white"
                    android:paddingStart="@dimen/padding_standard"
                    android:paddingEnd="@dimen/padding_standard"
                    android:paddingTop="@dimen/padding_medium"
                    android:paddingBottom="@dimen/padding_medium"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:hint="@string/write_your_comment"
                    android:background="@drawable/shape_rectangle_rounded_6dp_stroke_white"
                    android:textColorHint="@color/gray"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/movie_show_all_comments_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?textAppearanceHeadline3"
                android:visibility="gone"
                tools:visibility="visible"
                app:backgroundTint="@color/colorAccent"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="@string/show_all_comments"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>